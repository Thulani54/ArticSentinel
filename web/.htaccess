# This enables the URL rewriting engine
RewriteEngine On

# This sets the base of the rewrite to the root directory
RewriteBase /

# This rule says: if the request is not for an existing file...
RewriteCond %{REQUEST_FILENAME} !-f

# ...and the request is not for an existing directory...
RewriteCond %{REQUEST_FILENAME} !-d

# ...then rewrite the request to index.html and stop processing rules.
RewriteRule . /index.html [L]